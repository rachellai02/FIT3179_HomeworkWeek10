{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 500,
  "title": "Share of obese population vs daily supply of calories in 2014",
  "data": {
    "url": "https://raw.githubusercontent.com/rachellai02/FIT3179_HomeworkWeek10/master/data/(continent)share-of-adult-men-overweight-or-obese-vs-daily-supply-of-calories-2014.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Daily caloric supply",
      "type": "quantitative",
      "title": "Daily Caloric Supply",
      "axis": {"tickCount": 7}
    },
    "y": {
      "field": "Obese",
      "type": "quantitative",
      "title": "Obese (%)",
      "axis": {"tickCount": 6}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000, 1000000000, 5000000000],
            "range": [10, 50, 100, 150, 200, 300, 400, 500]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
        "field": "Continent",
        "type": "nominal"
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Entity", "type": "nominal"},
          {"field": "Daily caloric supply", "type": "quantitative"},
          {"field": "Obese", "type": "quantitative"},
          {"field": "Population", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Entity", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Entity'] == 'China' || datum['Entity'] == 'India' || datum['Entity'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Entity", "type": "nominal"},
          {"field": "Daily caloric supply", "type": "quantitative"},
          {"field": "Obese", "type": "quantitative"},
          {"field": "Population", "type": "quantitative"}
        ]
      }
    }
  ]
}
